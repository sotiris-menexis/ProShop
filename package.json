{
	"name": "ecommerceapp",
	"version": "1.0.0",
	"description": "eCommerce application using the MERN stack",
	"type": "module",
	"main": "server.js",
	"scripts": {
		"start": "node backend/server.js",
		"server": "nodemon backend/server.js",
		"client": "npm start --prefix frontend",
		"dev": "concurrently \"npm run server\" \"npm run client\"",
		"data:import": "node backend/seeder.js",
		"data:destroy": "node backend/seeder.js -d",
		"build": "npm install && npm install --prefix frontend && npm run build --prefix frontend"
	},
	"author": "Sotiris Menexis",
	"license": "MIT",
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"cookie-parser": "^1.4.7",
		"express": "^4.21.1",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.8.3",
		"multer": "^1.4.5-lts.1"
	},
	"devDependencies": {
		"concurrently": "^9.1.0",
		"dotenv": "^16.4.5",
		"nodemon": "^3.1.7"
	}
}
